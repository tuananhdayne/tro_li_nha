@model DAO.BaseModels.User
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="topbar">
    <div class="topbar-title">
        <h2>Thông tin tài khoản</h2>
        <p>Xem và chỉnh sửa thông tin cá nhân</p>
    </div>
    <div class="topbar-actions">
        <a asp-action="Settings" class="btn btn-secondary">Cài đặt</a>
    </div>
</div>

<div class="content" style="display: flex; justify-content: center; padding-top: 2rem;">
    <div class="card" style="width: 100%; max-width: 500px;">
        <div class="card-header">
            <div class="card-header-left">
                <div>
                    <div class="card-title">Thông tin cá nhân</div>
                    <div class="card-subtitle">Cập nhật thông tin tài khoản của bạn</div>
                </div>
            </div>
        </div>
        <form asp-action="Edit" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
                    <input asp-for="UserName" class="form-input" style="background: var(--card-bg); cursor: not-allowed;" readonly />
                </div>
                
                <div class="form-group">
                    <label asp-for="DisplayName" class="form-label">Tên hiển thị</label>
                    <input asp-for="DisplayName" class="form-input" placeholder="Nhập tên hiển thị" />
                </div>
                
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-input" placeholder="email@example.com" />
                </div>
                
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-input" placeholder="0123456789" />
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" style="flex: 1;">Lưu thay đổi</button>
                <a asp-action="ChangePassword" class="btn btn-secondary">Đổi mật khẩu</a>
            </div>
        </form>
    </div>
</div>
