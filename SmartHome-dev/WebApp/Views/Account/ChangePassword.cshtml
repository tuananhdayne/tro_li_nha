@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="topbar">
    <div class="topbar-title">
        <h2>Đổi mật khẩu</h2>
        <p>Thay đổi mật khẩu để bảo vệ tài khoản</p>
    </div>
    <div class="topbar-actions">
        <a asp-action="Settings" class="btn btn-secondary">← Quay lại</a>
    </div>
</div>

<div class="content" style="display: flex; justify-content: center; padding-top: 2rem;">
    <div class="card" style="width: 100%; max-width: 450px;">
        <div class="card-header">
            <div class="card-header-left">
                <div>
                    <div class="card-title">Đổi mật khẩu</div>
                    <div class="card-subtitle">Nhập mật khẩu cũ và mật khẩu mới</div>
                </div>
            </div>
        </div>
        <form asp-action="ChangePassword" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
                    <input asp-for="OldPassword" type="password" class="form-input" placeholder="Nhập mật khẩu hiện tại" />
                    <span asp-validation-for="OldPassword" style="color: #dc2626; font-size: 0.85rem;"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="form-input" placeholder="Nhập mật khẩu mới" />
                    <span asp-validation-for="NewPassword" style="color: #dc2626; font-size: 0.85rem;"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="Nhập lại mật khẩu mới" />
                    <span asp-validation-for="ConfirmPassword" style="color: #dc2626; font-size: 0.85rem;"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" style="flex: 1;">Đổi mật khẩu</button>
                <a asp-action="Settings" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>
