@{
    ViewData["Title"] = "Thêm phòng mới";
    var houses = ViewBag.Houses as IEnumerable<DAO.BaseModels.House>;
    var selectedHouseId = ViewBag.SelectedHouseId as int?;
}

<div class="topbar">
    <div class="topbar-title">
        <h2>Thêm phòng mới</h2>
        <p>Tạo phòng để quản lý thiết bị</p>
    </div>
    <div class="topbar-actions">
        <a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
    </div>
</div>

<div class="content" style="display: flex; justify-content: center; padding-top: 2rem;">
    <div class="card" style="width: 100%; max-width: 500px;">
        <div class="card-header">
            <div class="card-header-left">
                <div>
                    <div class="card-title">Thông tin phòng</div>
                    <div class="card-subtitle">Điền thông tin để tạo phòng mới</div>
                </div>
            </div>
        </div>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="card-body">
                @if (selectedHouseId != null)
                {
                    <input type="hidden" name="houseId" value="@selectedHouseId" />
                    <div class="form-group">
                        <label class="form-label">Nhà</label>
                        <div class="form-input" style="background: var(--card-bg); cursor: not-allowed;">
                            @(houses?.FirstOrDefault(h => h.ID == selectedHouseId)?.Name ?? "Đã chọn")
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="form-label">Chọn nhà <span style="color: var(--primary);">*</span></label>
                        <select name="houseId" class="form-input" required>
                            <option value="">-- Chọn nhà --</option>
                            @if (houses != null)
                            {
                                @foreach (var house in houses)
                                {
                                    <option value="@house.ID">@house.Name</option>
                                }
                            }
                        </select>
                    </div>
                }
                
                <div class="form-group">
                    <label class="form-label">Tên phòng <span style="color: var(--primary);">*</span></label>
                    <input type="text" name="name" class="form-input" placeholder="VD: Phòng khách, Phòng ngủ 1..." required autofocus />
                </div>
                
                <div class="form-group">
                    <label class="form-label">Mô tả</label>
                    <input type="text" name="detail" class="form-input" placeholder="VD: Tầng 1, Khu vực A..." />
                    <small class="text-muted">Mô tả ngắn gọn về vị trí hoặc đặc điểm phòng</small>
                </div>
            </div>
            <div class="card-footer" style="display: flex; gap: 1rem;">
                <button type="submit" class="btn btn-primary" style="flex: 1;">Tạo phòng</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>