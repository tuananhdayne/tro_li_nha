<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_4">

    <!-- Status text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhấn mic để nói..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Mic visual container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Large mic button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/mic_24px"
            app:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabCustomSize="80dp"
            app:maxImageSize="40dp"/>

        <!-- Listening animation ring -->
        <View
            android:id="@+id/viewRing"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/listening_ring"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- User speech text -->
    <TextView
        android:id="@+id/tvUserSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <!-- Assistant response text -->
    <TextView
        android:id="@+id/tvAssistantResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:minHeight="40dp"/>

</LinearLayout>
