<!-- res/layout/sheet_device_confirm.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="16dp" android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDevice"
            android:layout_width="64dp" android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_light" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRoomType"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlannedAction"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
        <View
            android:id="@+id/viewColorPreview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_color_preview"
            android:visibility="gone" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:text="Huỷ"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnNext"
                android:text="Không phải, xem tiếp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnConfirm"
                android:text="Đúng"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>